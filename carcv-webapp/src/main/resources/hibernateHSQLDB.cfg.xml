<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.bytecode.use_reflection_optimizer">false</property>
		<property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
		<!-- <property name="hibernate.connection.url">jdbc:hsqldb:file:/opt/db/production_db</property> 
			jdbc:hsqldb:hsql://localhost</property> server style -->
		<property name="hibernate.connection.url">jdbc:hsqldb:mem:testdb</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
		<property name="hibernate.show_sql">false</property>
		<property name="hibernate.hbm2ddl.auto">create-drop</property>
		<property name="hibernate.current_session_context_class">thread</property>
		<!-- <property name="hibernate.hbm2ddl.import_files">import.sql.hsqldb</property> -->

		<mapping class="org.carcv.model.Address" />
		<mapping class="org.carcv.model.CarData" />
		<mapping class="org.carcv.model.Entry" />
		<mapping class="org.carcv.model.LicencePlate" />
		<mapping class="org.carcv.model.MediaObject" />
		<mapping class="org.carcv.model.Speed" />
	</session-factory>
</hibernate-configuration>
